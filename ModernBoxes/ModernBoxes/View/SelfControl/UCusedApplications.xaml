<UserControl x:Class="ModernBoxes.View.SelfControl.UCusedApplications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernBoxes.View.SelfControl"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <hc:TransitioningContentControl>
        <Border  Background="Transparent">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="添加应用" Command="{Binding OpenAddApplicationDialog}"/>
                    <Separator/>
                    <MenuItem Header="管理应用" Command="{Binding ManagerApplication}"/>
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </hc:TransitioningContentControl>
</UserControl>
